#:kivy 1.11.0

<PongBall>:
    size: 25,25
    canvas:
        Color: 
            rgba: 0,1,0,0.5
        Ellipse:
            pos: self.pos
            size: self.size
            
<PongVirtualBall>:
    size: 25,25
    canvas:
        Color: 
            rgba: 1,1,1,0
        Ellipse:
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: 12.5, 100
    canvas:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos:self.pos
            size:self.size

<PongEndmsg>:
    Label:
        font_size: 60
        text: root.win_msg 
        pos: self.parent.pos

<PongScoremsg>:
    Label:
        font_size: 60
        text: root.score_msg 
        pos: self.parent.pos
        
<PongGame>:
    ball: pong_ball
    vball: virt_pong_ball
    player1: player_left
    player2: player_right
    endmsg: end_game
    score_msg: score_msg
    my_slider: slider
    
    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height
    
    Label:
        font_size: 30  
        center_x: root.width / 4
        top: root.top - 35
        text: "(a/z)\n" + str(root.player1.score) + "/"+str(root.win_score)
        
    Label:
        font_size: 30  
        center_x: root.width * 3 / 4
        top: root.top - 35
        text: "(k/m)\n" + str(root.player2.score) + "/"+str(root.win_score)
    
    Slider:
        id: slider
        value: 50
        center_x: root.width / 2
        top: root.top - 20
        min: 1
        max: 99
        orientation: 'horizontal'
        size_hint: None, None
        size: 400, 25
        
    Label:
        font_size: 25  
        center_x: root.width / 2
        top: root.top - 35
        color: 1,0,1,1
        text: "Uncertainty in position: " + str(int(root.my_slider.value*10)/10)
    
    PongBall:
        id: pong_ball
        center: self.parent.center

    PongVirtualBall:
        id: virt_pong_ball
        center: self.parent.center
        
    PongPaddle:
        id: player_left
        x: root.x + 50
        center_y: root.center_y
        
    PongPaddle:
        id: player_right
        x: root.width - self.width - 50
        center_y: root.center_y
    
    PongEndmsg:
        id: end_game
        center_x: root.width / 2
        top: root.top - 500
        
    PongScoremsg:
        id: score_msg
        center_x: root.width / 2
        top: root.top - 500
        
